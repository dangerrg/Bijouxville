<p style="color: green"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @jewel.name %>
</p>

<p>
  <strong>Materials:</strong>
  <%= @jewel.material %>
</p>

<p>
  <strong>Stones:</strong>
  <%= @jewel.type_of_stones %>
</p>

<p>
  <strong>Number of stones:</strong>
  <%= @jewel.number_of_stones %>
</p>

<p>
  <strong>Description:</strong>
  <%= @jewel.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @jewel.material_base_cost + (@jewel.price_of_stone * @jewel.number_of_stones) %> CHF
</p>
<p>
  <strong>Price:</strong>
  <%= @jewel.price %> CHF
</p>

<p>
  <strong>Jeweler:</strong>
  <%= @jewel.jeweler_id %>
</p>

<div>
  <%= link_to "Back to jewels", jewels_path %>
  <%= button_to "Destroy this jewel", @jewel, method: :delete %>
</div>
